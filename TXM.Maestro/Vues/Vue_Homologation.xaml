<UserControl x:Class="TXM.Maestro.Vues.Vue_Homologation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             MinHeight="350" MinWidth="600"
             Background="{DynamicResource App.CouleurFond}"
             Foreground="{DynamicResource App.CouleurTexte}">

    <StackPanel Margin="16" Orientation="Vertical">

        <!-- Titre -->
        <TextBlock Text="Homologation"
                   Style="{StaticResource App.Titre}"
                   Margin="0,0,0,12"/>

        <!-- Tableau des concours -->
        <DataGrid ItemsSource="{Binding Concours}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0,8,0,0"
                  Style="{StaticResource App.DataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id"
                                    Binding="{Binding Id}"
                                    Width="60"/>
                <DataGridTextColumn Header="Nom"
                                    Binding="{Binding Nom}"
                                    Width="*"/>
                <DataGridTextColumn Header="Date"
                                    Binding="{Binding Date, StringFormat=d}"
                                    Width="120"/>
                <DataGridTextColumn Header="Statut"
                                    Binding="{Binding Statut}"
                                    Width="120"/>

                <!-- actions -->
                <DataGridTemplateColumn Header="Actions" Width="260">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="4">
                                <Button Content="Valider"
                                        Command="{Binding DataContext.CmdValider, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource App.BoutonPrimaire}"
                                        Width="80"/>
                                <Button Content="Rejeter"
                                        Command="{Binding DataContext.CmdRejeter, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource App.BoutonSecondaire}"
                                        Width="80"/>
                                <Button Content="Historique"
                                        Command="{Binding DataContext.CmdHistorique, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource App.BoutonSecondaire}"
                                        Width="100"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
