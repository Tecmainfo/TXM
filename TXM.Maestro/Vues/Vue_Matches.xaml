<UserControl x:Class="TXM.Maestro.Vues.Vue_Matches"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             MinHeight="400" MinWidth="700"
             Background="{DynamicResource App.CouleurFond}"
             Foreground="{DynamicResource App.CouleurTexte}">

    <StackPanel Margin="16" Orientation="Vertical">

        <!-- titre -->
        <TextBlock Text="Matches de la poule"
                   Style="{StaticResource App.Titre}"
                   Margin="0,0,0,12"/>

        <!-- grille matches -->
        <DataGrid ItemsSource="{Binding Matches}"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserAddRows="False"
                  Style="{StaticResource App.DataGrid}"
                  Margin="0,8,0,12">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tour"
                                    Binding="{Binding Tour}"
                                    Width="60"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Équipe A"
                                    Binding="{Binding EquipeA}"
                                    Width="200"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Équipe B"
                                    Binding="{Binding EquipeB}"
                                    Width="200"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Score A"
                                    Binding="{Binding ScoreA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Width="80"/>
                <DataGridTextColumn Header="Score B"
                                    Binding="{Binding ScoreB, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Width="80"/>
                <DataGridTextColumn Header="Heure"
                                    Binding="{Binding DateHeure, StringFormat=t}"
                                    Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- actions -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="Enregistrer Scores"
                    Width="200"
                    Margin="0,0,8,0"
                    Style="{StaticResource App.BoutonPrimaire}"
                    Click="OnEnregistrerScores"/>
            <Button Content="Générer matches de la poule"
                    Width="240"
                    Style="{StaticResource App.BoutonSecondaire}"
                    Click="OnGenererMatchesPoule"/>
        </StackPanel>

    </StackPanel>
</UserControl>
