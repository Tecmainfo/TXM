<UserControl x:Class="TXM.TripleX.Vues.Vue_Joueurs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource App.CouleurFond}"
             Foreground="{DynamicResource App.CouleurTexte}"
             MinHeight="400" MinWidth="600">

    <StackPanel Margin="16">

        <TextBlock Text="Gestion des Joueurs"
                   Style="{StaticResource App.Titre}"
                   Margin="0,0,0,12"/>

        <!-- Ajout simple -->
        <DockPanel Margin="0,8,0,16">
            <TextBox x:Name="SaisieNom"
                     Width="160"
                     Margin="0,0,8,0"
                     md:HintAssist.Hint="Nom"/>
            <TextBox x:Name="SaisieLicence"
                     Width="140"
                     Margin="0,0,8,0"
                     md:HintAssist.Hint="Licence"/>
            <TextBox x:Name="SaisieClub"
                     Width="180"
                     Margin="0,0,8,0"
                     md:HintAssist.Hint="Club"/>
            <Button Content="Ajouter"
                    Width="120"
                    Style="{StaticResource App.BoutonPrimaire}"
                    Click="OnAjouterJoueur"/>
        </DockPanel>

        <!-- Tableau -->
        <DataGrid ItemsSource="{Binding Joueurs}"
                  SelectedItem="{Binding JoueurSélectionné, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserAddRows="False"
                  Height="220"
                  Margin="0,8,0,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="200"/>
                <DataGridTextColumn Header="Licence" Binding="{Binding Licence}" Width="140"/>
                <DataGridTextColumn Header="Club" Binding="{Binding Club}" Width="180"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Détails -->
        <GroupBox Header="Détails du joueur sélectionné"
                  Margin="0,8,0,0"
                  BorderBrush="{DynamicResource App.CouleurSecondaire}">
            <StackPanel Margin="8">
                <TextBox Text="{Binding JoueurSélectionné.Nom}" md:HintAssist.Hint="Nom" Margin="0,4"/>
                <TextBox Text="{Binding JoueurSélectionné.Licence}" md:HintAssist.Hint="Licence" Margin="0,4"/>
                <TextBox Text="{Binding JoueurSélectionné.Club}" md:HintAssist.Hint="Club" Margin="0,4"/>
                <Button Content="Enregistrer les modifications"
                        Width="240"
                        Margin="0,12,0,0"
                        Style="{StaticResource App.BoutonPrimaire}"
                        Click="OnEnregistrerModifs"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
