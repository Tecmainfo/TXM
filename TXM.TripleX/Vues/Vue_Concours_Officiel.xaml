<UserControl x:Class="TXM.TripleX.Vues.Vue_Concours_Officiel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             MinHeight="300" MinWidth="700"
             Background="{DynamicResource App.CouleurFond}"
             Foreground="{DynamicResource App.CouleurTexte}">

    <StackPanel Margin="16" Orientation="Vertical">

        <!-- Titre -->
        <TextBlock Text="Concours Officiel"
                   Style="{StaticResource App.Titre}"
                   Margin="0,0,0,12"/>

        <!-- Création d’un concours -->
        <DockPanel Margin="0,8,0,16" LastChildFill="False">
            <TextBox x:Name="SaisieNomConcours"
                     Width="200"
                     Margin="0,0,8,0"
                     Style="{StaticResource App.TextBox}"
                     materialDesign:HintAssist.Hint="Nom du concours"/>

            <DatePicker x:Name="SaisieDate"
                        Width="160"
                        Margin="0,0,8,0"
                        SelectedDate="{Binding DateConcours, Mode=TwoWay}"
                        Foreground="{DynamicResource App.CouleurTexte}"
                        Background="{DynamicResource App.CouleurFond}"/>

            <TextBox x:Name="SaisieHomologation"
                     Width="140"
                     Margin="0,0,8,0"
                     Style="{StaticResource App.TextBox}"
                     materialDesign:HintAssist.Hint="N° Homologation"/>

            <TextBox x:Name="SaisieArbitre"
                     Width="160"
                     Margin="0,0,8,0"
                     Style="{StaticResource App.TextBox}"
                     materialDesign:HintAssist.Hint="Arbitre"/>

            <Button Content="Créer"
                    Width="120"
                    Style="{StaticResource App.BoutonPrimaire}"
                    Click="OnCréerConcours"/>
        </DockPanel>

        <!-- Liste des concours -->
        <DataGrid ItemsSource="{Binding Concours}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Style="{StaticResource App.DataGrid}"
                  Margin="0,4,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*"/>
                <DataGridTextColumn Header="Date"
                                    Binding="{Binding Date, StringFormat=d}"
                                    Width="120"/>
                <DataGridTextColumn Header="Homologation"
                                    Binding="{Binding Numéro_Homologation}"
                                    Width="140"/>
                <DataGridTextColumn Header="Arbitre"
                                    Binding="{Binding Arbitre}"
                                    Width="160"/>
                <DataGridTextColumn Header="Statut"
                                    Binding="{Binding Statut}"
                                    Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
