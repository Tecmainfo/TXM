<Page x:Class="TXM.Interfaces.Pages.Page_Joueurs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource App.CouleurFond}"
      Foreground="{DynamicResource App.CouleurTexte}"
      MinHeight="400" MinWidth="700">

    <DockPanel Margin="16">

        <!-- titre -->
        <TextBlock Text="Gestion des joueurs"
                   Style="{StaticResource App.Titre}"
                   DockPanel.Dock="Top"
                   Margin="0,0,0,8"/>

        <!-- tableau joueurs -->
        <DataGrid ItemsSource="{Binding Joueurs}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Style="{StaticResource App.DataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id"
                                    Binding="{Binding Id}"
                                    Width="60"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Nom"
                                    Binding="{Binding Nom}"
                                    Width="*"/>
                <DataGridTextColumn Header="Licence"
                                    Binding="{Binding Licence}"
                                    Width="120"/>
                <DataGridTextColumn Header="Club"
                                    Binding="{Binding Club}"
                                    Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>
</Page>
