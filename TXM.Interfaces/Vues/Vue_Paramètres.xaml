<UserControl x:Class="TXM.Interfaces.Vues.Vue_Paramètres"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             MinHeight="400" MinWidth="500"
             Background="{DynamicResource App.CouleurFond}"
             Foreground="{DynamicResource App.CouleurTexte}">

    <Grid Margin="20">
        <StackPanel Orientation="Vertical">

            <TextBlock Text="{DynamicResource Texte.Paramètres}"
                       Style="{StaticResource App.Titre}"
                       Margin="0,0,0,16"/>

            <CheckBox Content="Ignorer l’écran d’accueil"
                      IsChecked="{Binding Ignorer_Écran_Accueil, Mode=TwoWay}"
                      Style="{StaticResource App.CheckBox}"
                      Margin="0,8"/>

            <!-- Langue -->
            <StackPanel Orientation="Horizontal" Margin="0,8">
                <TextBlock Text="Langue :" VerticalAlignment="Center"
                           Margin="0,0,8,0"
                           Foreground="{DynamicResource App.CouleurTexte}"/>
                <ComboBox ItemsSource="{Binding Langues_Disponibles}"
                          SelectedItem="{Binding Langue, Mode=TwoWay}"
                          Style="{StaticResource App.ComboBox}"
                          Width="150"/>
            </StackPanel>

            <!-- Effet Fluent -->
            <StackPanel Orientation="Horizontal" Margin="0,8">
                <TextBlock Text="Effet Fluent :" 
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"
                           Foreground="{DynamicResource App.CouleurTexte}"/>
                <ComboBox ItemsSource="{Binding Effets_Disponibles}"
                          SelectedItem="{Binding Effet_Fluent, Mode=TwoWay}"
                          Style="{StaticResource App.ComboBox}"
                          Width="150"/>
            </StackPanel>


            <Button Content="💾 Sauvegarder"
                    Command="{Binding Commande_Sauvegarder}"
                    Style="{StaticResource App.BoutonPrimaire}"
                    Margin="0,16,0,0"
                    Width="180" Height="40"/>
        </StackPanel>
    </Grid>
</UserControl>
