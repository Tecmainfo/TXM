<UserControl x:Class="TXM.GrandsTournois.Vues.Vue_Tournoi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource App.CouleurFond}"
             Foreground="{DynamicResource App.CouleurTexte}">

    <StackPanel Margin="16">

        <TextBlock Text="Gestion des Tournois"
                   Style="{StaticResource App.Titre}"
                   Margin="0,0,0,12"/>

        <!-- Formulaire création -->
        <WrapPanel Margin="0,8,0,8">
            <TextBox x:Name="Nom" Width="160" md:HintAssist.Hint="Nom" Margin="0,0,8,0"/>
            <TextBox x:Name="Organisateur" Width="160" md:HintAssist.Hint="Organisateur" Margin="0,0,8,0"/>
            <TextBox x:Name="Lieu" Width="160" md:HintAssist.Hint="Lieu" Margin="0,0,8,0"/>
            <Button Content="Ajouter"
                    Width="120"
                    Style="{StaticResource App.BoutonPrimaire}"
                    Click="OnAjouter"/>
        </WrapPanel>

        <!-- Tableau -->
        <DataGrid ItemsSource="{Binding Tournois}"
                  SelectedItem="{Binding TournoiSélectionné, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  Height="300"
                  Style="{StaticResource App.DataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*"/>
                <DataGridTextColumn Header="Lieu" Binding="{Binding Lieu}" Width="200"/>
                <DataGridTextColumn Header="Organisateur" Binding="{Binding Organisateur}" Width="200"/>
                <DataGridTextColumn Header="Début" Binding="{Binding Date_Début}" Width="120"/>
                <DataGridTextColumn Header="Fin" Binding="{Binding Date_Fin}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Détails -->
        <GroupBox Header="Tournoi sélectionné" Margin="0,8,0,0">
            <StackPanel Margin="8">
                <TextBox Text="{Binding TournoiSélectionné.Nom}" md:HintAssist.Hint="Nom"/>
                <TextBox Text="{Binding TournoiSélectionné.Lieu}" md:HintAssist.Hint="Lieu"/>
                <TextBox Text="{Binding TournoiSélectionné.Organisateur}" md:HintAssist.Hint="Organisateur"/>
                <Button Content="Supprimer" Margin="0,12,0,0"
                        Width="200"
                        Style="{StaticResource App.BoutonSecondaire}"
                        Click="OnSupprimer"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
