<UserControl x:Class="TXM.GrandsTournois.Vues.Vue_Terrains"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource App.CouleurFond}"
             Foreground="{DynamicResource App.CouleurTexte}">
    <StackPanel Margin="16">

        <TextBlock Text="Terrains du site"
                   Style="{StaticResource App.Titre}"
                   Margin="0,0,0,12"/>

        <DataGrid ItemsSource="{Binding Terrains}"
                  SelectedItem="{Binding TerrainSélectionné, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  Height="300"
                  Style="{StaticResource App.DataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="120"/>
                <DataGridCheckBoxColumn Header="Disponible" Binding="{Binding Est_Disponible}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
