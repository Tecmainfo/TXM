<UserControl x:Class="TXM.GrandsTournois.Vues.Vue_FicheMatch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource App.CouleurFond}"
             Foreground="{DynamicResource App.CouleurTexte}">
    <StackPanel Margin="16">

        <TextBlock Text="Feuille de match"
                   Style="{StaticResource App.Titre}"
                   Margin="0,0,0,12"/>

        <Grid Margin="0,8,0,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0" md:HintAssist.Hint="Équipe A" Text="{Binding EquipeA}" Margin="0,4"/>
            <TextBox Grid.Row="1" md:HintAssist.Hint="Équipe B" Text="{Binding EquipeB}" Margin="0,4"/>
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8">
                <TextBox Width="80" md:HintAssist.Hint="Score A" Text="{Binding ScoreA}" Margin="0,0,8,0"/>
                <TextBox Width="80" md:HintAssist.Hint="Score B" Text="{Binding ScoreB}" Margin="0,0,8,0"/>
                <TextBox Width="100" md:HintAssist.Hint="Terrain" Text="{Binding Terrain}" Margin="0,0,8,0"/>
                <Button Content="Exporter PDF"
                        Width="160"
                        Style="{StaticResource App.BoutonPrimaire}"
                        Click="OnExporter"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
